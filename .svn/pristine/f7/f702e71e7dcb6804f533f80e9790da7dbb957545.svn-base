<template>
<c-chart class="chartDialogResult" @mounted="onChartMounted"></c-chart>
</template>

<script>
export default {
    props: ['data'],
    methods: {
        getChartOption() {
            let optionObj = {
                xAxis: {
                    type: 'category',
                    axisLine:{
                        show:false
                    },
                    axisTick:{
                        show:false
                    },
                    splifLine:{
                        show:false,
                    },
                    axisLabel:{
                        show:false,
                    },
                    data: ['8日', '9日', '10日', '11日', '12日', '13日', '14日']
                },
                yAxis: {
                    type : 'value',
                    min:1,
                    axisLine: {
                        show: false
                    },
                    axisTick: {
                        show: false
                    },
                    axisLabel: {
                        // show:false,
                        //  showMinLabel: false,
                        // showMaxLabel: false,
                        textStyle: {
                            color: '#999'
                        },
                        // formatter:'{value}'
                        formatter:(value)=>{
                          let valueTxt = '222';
                            if (value.length > 3) {
                            valueTxt = value.substring(0, 2) + '...';
                            }
                            else {
                            valueTxt = value;
                            }
                            return valueTxt ;  
                        },
                    },
                    splitLine:{
                        show:true,
                        lineStyle:{
                            type:'solid',
                            color: ['#555','#fff','#fff','#fff','#fff','#409eff']
                        }
                    }
                },
                series: [{
                    data: [15, 19, 25, 30, 10, 40, 50],
                    type: 'line',
                    smooth: true
                }]
            }
            return optionObj
        },
        onChartMounted(chart) {
            chart.initOption({
                option: this.getChartOption()
            });
        },
    }
}
</script>

