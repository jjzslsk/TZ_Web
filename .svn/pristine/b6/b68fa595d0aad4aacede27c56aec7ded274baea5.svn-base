layui.use(['element','form','layer'], function(){
    var element = layui.element;
        layer = layui.layer;

        element.on('tab(demo)', function(data){
            console.log(data.index); //得到当前Tab的所在下标
            if (data.index == 0) {
                $(".main-plane").show()
                $(".main-section").hide()
                $(".main-temporal").hide()
                $(".main-sounding").hide()
            }else if(data.index == 1){
                $(".main-plane").hide()
                $(".main-section").show()
                $(".main-temporal").hide()
                $(".main-sounding").hide()
            }else if(data.index == 2){
                $(".main-plane").hide()
                $(".main-section").hide()
                $(".main-temporal").show()
                $(".main-sounding").hide()
            }else if(data.index == 3){
                $(".main-plane").hide()
                $(".main-section").hide()
                $(".main-temporal").hide()
                $(".main-sounding").show()
            }
        });

  });

